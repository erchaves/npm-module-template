{
  "name": "@erchaves/npm-module-template",
  "version": "1.0.5",
  "description": "NPM package template to quick-start with Babel, Flow, ESLint and Mocha. Based on https://github.com/Beingbook/npm-module-template",
  "keyword": [
    "template",
    "babel",
    "flow",
    "eslint",
    "mocha"
  ],
  "author": "Eric Chaves <erchaves@gmail.com>",
  "main": "lib/index.js",
  "engines": {
    "node": ">=5.0 <6",
    "npm": ">=3.3 <4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erchaves/npm-module-template.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "mocha tests/* --compilers js:babel-register --require ./tests/helper.js --recursive",
    "start": "babel-node ./src/",
    "lint": "eslint --ext .js ./",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run lint && babel src -d lib"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-flow-strip-types",
      "add-module-exports"
    ]
  },
  "devDependencies": {
    "app-module-path": "^2.2.0",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.2.6",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "mocha": "^3.2.0",
    "pretty-error": "^2.0.0"
  },
  "bugs": {
    "url": "https://github.com/erchaves/npm-module-template/issues"
  },
  "homepage": "https://github.com/erchaves/npm-module-template#readme",
  "directories": {
    "test": "tests"
  }
}
